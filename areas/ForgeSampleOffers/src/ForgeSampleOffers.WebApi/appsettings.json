{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Information"
    },
    "ForgeLogger": {
      "Sinks": {
        "Console": {
          "UseColors": true,
          "TimestampFormat": "HH:mm:ss",
          "Template": "{Timestamp} [{Level}] {Message}",
          "ShortenLevel": true
        }
      }
    }
  }
}